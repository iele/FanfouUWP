<UserControl
    x:Class="FanfouWP2.ItemControl.TrendsItemControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FanfouWP2.ItemControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="1" Margin="12,11,0,10" Orientation="Horizontal">
            <TextBlock Margin="0,0,-0.083,0" Text="{Binding name}" VerticalAlignment="Center" FontSize="24" />
            <TextBlock Margin="12,0,-0.083,0" Text="{Binding query}" VerticalAlignment="Center" FontSize="18.667"
                       Foreground="Gray" />
        </StackPanel>
        <Rectangle Fill="DeepSkyBlue" HorizontalAlignment="Left" Height="30" Margin="10,0,0,0" Stroke="DeepSkyBlue"
                   VerticalAlignment="Center" Width="15" />

    </Grid>
</UserControl>