<UserControl
    x:Class="FanfouUWP.ItemControl.RefreshItemControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FanfouUWP.ItemControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid Margin="0,24" Tapped="TextBlock_Tapped">
        <Grid Margin="0" Height="64">
            <TextBlock x:Name="TextBlock" TextWrapping="Wrap" Text="点击此处加载未读消息" FontSize="16" TextAlignment="Center" FontFamily="Portable User Interface" LineHeight="16" Margin="0,0,0,-1" VerticalAlignment="Center"/>
            <ProgressRing x:Name="ring" HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center" IsActive="True" Visibility="Collapsed"/>
        </Grid>
    </Grid>
</UserControl>
